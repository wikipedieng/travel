  <style>
    .about-hero {
      max-width: 850px;
      margin: 0 auto;
      padding: 42px 12px 30px 12px;
      text-align: center;
      background: linear-gradient(90deg, #faffec 0%, #f3f9ff 100%);
      border-radius: 2rem;
      box-shadow: 0 4px 32px #0db9fd0e;
    }
    .about-title {
      font-size: 2.12rem;
      font-weight: 900;
      color: #199c60;
      letter-spacing: 0.5px;
      margin-bottom: 13px;
    }
    .about-title span {
      color: #0071c2;
      font-weight: 900;
      margin-left: 7px;
      text-shadow: 0 2px 10px #fff8;
    }
    .about-desc {
      font-size: 1.16rem;
      color: #1e9967;
      margin-bottom: 36px;
      line-height: 1.6;
      max-width: 680px;
      margin-left: auto;
      margin-right: auto;
    }
    .about-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(235px, 1fr));
      gap: 23px;
      margin: 28px 0 35px 0;
      justify-content: center;
    }
    .about-card {
      background: #fff;
      border-radius: 1.3rem;
      box-shadow: 0 2px 14px #0071c212;
      padding: 27px 18px 21px 18px;
      text-align: left;
      color: #133562;
      font-size: 1.05rem;
      font-weight: 600;
      transition: transform .16s, box-shadow .19s;
      border: 1.4px solid #e3ecfa;
      min-height: 176px;
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
    }
    .about-card h3 {
      font-size: 1.08rem;
      color: #0071c2;
      font-weight: 900;
      margin-bottom: 10px;
      letter-spacing: 0.1px;
    }
    .about-card p {
      color: #199c60;
      font-weight: 500;
      font-size: 1.03rem;
      margin-bottom: 0;
    }
    .about-card:hover {
      transform: translateY(-7px) scale(1.025);
      box-shadow: 0 8px 36px #0db9fd15;
      border-color: #0071c2;
      background: #f7fdff;
    }
    .about-motto {
      font-size: 1.16rem;
      color: #199c60;
      margin: 36px auto 14px auto;
      font-weight: 600;
      max-width: 600px;
    }
    .about-highlight {
      color: #0071c2;
      font-weight: 900;
      background: #eaf7ff;
      border-radius: 9px;
      padding: 2px 9px;
      margin: 0 2px;
      display: inline-block;
    }
    .about-sign {
      margin-top: 28px;
      color: #1e9967;
      font-size: 1.08rem;
      font-weight: 700;
    }
    @media (max-width: 600px) {
      .about-hero { padding: 22px 2vw 17px 2vw; border-radius: 1rem; }
      .about-title { font-size: 1.13rem; }
      .about-card { padding: 17px 9px; min-height: 120px; }
      .about-motto { font-size: 1.01rem; }
      .about-sign { font-size: 1.01rem; }
    }
  </style>
</Layout>
