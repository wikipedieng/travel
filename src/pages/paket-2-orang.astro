---
import Layout from '../layouts/Layout.astro';

const paket = {
  title: 'Paket Wisata Dieng untuk 2 Orang',
  subtitle: 'Trip privat seru dan nyaman, cocok banget buat kamu dan teman atau pasangan!',
  priceStart: 975000, // mulai dari per orang
  durationOptions: ['1 Hari', '2 Hari 1 Malam', '3 Hari 2 Malam'],
  description: `Nikmati perjalanan seru dan penuh keseruan ke Dieng dengan paket khusus buat 2 orang. 
  Jadwal fleksibel, destinasi lengkap, dan fasilitas privat buat kamu berdua bebas atur sendiri 
  rutenya. Cocok buat quality time, honeymoon, atau liburan santai bersama sahabat.`,
  features: [
    'Kendaraan privat dan nyaman',
    'Driver & guide profesional dan ramah',
    'Tiket masuk semua destinasi utama',
    '4x makan lezat khas Dieng',
    'Dokumentasi foto gratis dari guide',
    'Penginapan cozy (paket 2 hari+)',
    'Air mineral dan snack ringan',
  ],
  itinerary: [
    {
      day: 'Hari 1',
      activities: [
        'Penjemputan di meeting point pilihan',
        'Sunrise Sikunir - lihat matahari terbit yang magis',
        'Tour Kawah Sikidang yang berasap',
        'Jelajah Kompleks Candi Arjuna',
        'Makan siang di restoran lokal',
        'Wisata ke Telaga Warna penuh warna',
        'Check-in penginapan & istirahat',
        'Makan malam romantis atau santai',
      ],
    },
    {
      day: 'Hari 2 (jika pilih paket inap)',
      activities: [
        'Sarapan pagi di penginapan',
        'Tour Kebun Teh Pananjakan',
        'Kunjungan ke Museum Kailasa',
        'Makan siang dan oleh-oleh khas Dieng',
        'Perjalanan pulang dengan hati senang',
      ],
    },
  ],
};
---

<Layout title={`Paket Wisata Dieng untuk 2 Orang – Mulai dari Rp${paket.priceStart.toLocaleString('id-ID')}`}>
  <section class="dieng-paket-2orang-hero">
    <h1 class="dieng-paket-title">{paket.title}</h1>
    <p class="dieng-paket-subtitle">{paket.subtitle}</p>
    <p class="dieng-paket-price">Harga mulai dari <strong>Rp{paket.priceStart.toLocaleString('id-ID')}</strong> per orang</p>
  </section>

  <section class="dieng-paket-description">
    <p>{paket.description}</p>
  </section>

  <section class="dieng-paket-features">
    <h2>Fasilitas dan Keuntungan</h2>
    <ul>
      {paket.features.map((fitur) => (
        <li>✅ {fitur}</li>
      ))}
    </ul>
  </section>

  <section class="dieng-paket-itinerary">
    <h2>Itinerary Singkat</h2>
    {paket.itinerary.map((hari) => (
      <div class="dieng-paket-day">
        <h3>{hari.day}</h3>
        <ol>
          {hari.activities.map((kegiatan) => (
            <li>{kegiatan}</li>
          ))}
        </ol>
      </div>
    ))}
  </section>

  <style>
    .dieng-paket-2orang-hero {
      text-align: center;
      margin-top: 3rem;
      margin-bottom: 3rem;
      color: #133562;
    }
    .dieng-paket-title {
      font-size: 2.5rem;
      font-weight: 900;
      margin-bottom: 0.5rem;
    }
    .dieng-paket-subtitle {
      font-size: 1.3rem;
      font-weight: 600;
      margin-bottom: 1rem;
      color: #0071c2;
    }
    .dieng-paket-price {
      font-size: 1.6rem;
      color: #ffd600;
      font-weight: 800;
      margin-bottom: 3rem;
    }
    .dieng-paket-description {
      max-width: 700px;
      margin: 0 auto 3rem auto;
      font-size: 1.1rem;
      color: #19335a;
      line-height: 1.6;
    }
    .dieng-paket-features {
      max-width: 600px;
      margin: 0 auto 3rem auto;
      color: #133562;
    }
    .dieng-paket-features h2 {
      font-weight: 700;
      font-size: 1.5rem;
      margin-bottom: 1rem;
      text-align: center;
    }
    .dieng-paket-features ul {
      list-style: none;
      padding-left: 0;
      font-size: 1.1rem;
    }
    .dieng-paket-features li {
      margin-bottom: 0.7rem;
      color: #0071c2;
    }
    .dieng-paket-itinerary {
      max-width: 700px;
      margin: 0 auto 5rem auto;
      color: #19335a;
    }
    .dieng-paket-itinerary h2 {
      font-weight: 700;
      font-size: 1.5rem;
      margin-bottom: 1.2rem;
      text-align: center;
    }
    .dieng-paket-day h3 {
      font-weight: 700;
      font-size: 1.3rem;
      margin-bottom: 0.8rem;
      border-bottom: 2px solid #0071c2;
      padding-bottom: 6px;
    }
    .dieng-paket-day ol {
      margin-left: 1rem;
      font-size: 1.1rem;
      list-style-type: decimal;
      line-height: 1.6;
    }
    .dieng-paket-day ol li {
      margin-bottom: 0.5rem;
    }

    @media (max-width: 600px) {
      .dieng-paket-title {
        font-size: 1.8rem;
      }
      .dieng-paket-subtitle {
        font-size: 1.1rem;
      }
      .dieng-paket-price {
        font-size: 1.3rem;
      }
      .dieng-paket-description,
      .dieng-paket-features,
      .dieng-paket-itinerary {
        padding: 0 1rem;
      }
    }
  </style>
</Layout>
