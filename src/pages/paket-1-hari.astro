---
import Layout from '../layouts/Layout.astro';

const itinerary = [
  { jam: "03.00", kegiatan: "Penjemputan peserta di kota asal / meeting point" },
  { jam: "04.45", kegiatan: "Sunrise Sikunir & Telaga Cebong (spot sunrise legendaris)" },
  { jam: "07.00", kegiatan: "Sarapan lokal khas Dieng" },
  { jam: "08.00", kegiatan: "Eksplor Kawah Sikidang (wisata edukasi & fenomena alam)" },
  { jam: "09.30", kegiatan: "Tour Komplek Candi Arjuna" },
  { jam: "10.30", kegiatan: "Batu Ratapan Angin (panorama Telaga Warna)" },
  { jam: "12.30", kegiatan: "Dieng Plateau Theater / kuliner oleh-oleh" },
  { jam: "14.00", kegiatan: "Pulang ke kota asal, trip selesai & penuh cerita!" },
];

const fasilitas = [
  { icon: "üöê", text: "Transport AC & driver ramah" },
  { icon: "‚õΩ", text: "BBM, parkir, tol, tiket wisata utama" },
  { icon: "üçΩÔ∏è", text: "2x makan (sarapan & makan siang)" },
  { icon: "üßë‚Äçü§ù‚Äçüßë", text: "Tour guide lokal" },
  { icon: "üíß", text: "Air mineral selama trip" },
  { icon: "üì∏", text: "Free dokumentasi by crew" },
];

const faq = [
  {
    q: "Bisa custom itinerary atau request destinasi?",
    a: "Bisa banget! Semua trip 100% private, itinerary bisa diubah sesuai keinginan sebelum keberangkatan.",
  },
  {
    q: "Meeting point di mana saja?",
    a: "Bebas pilih: Wonosobo, Purwokerto, Jogja, Semarang, Solo, atau sesuai request. Silakan konfirmasi saat booking.",
  },
  {
    q: "Minimal & maksimal peserta berapa orang?",
    a: "Minimal 2 orang, maksimal hingga 30+ (rombongan, komunitas, atau keluarga besar). Harga makin murah untuk grup besar.",
  },
  {
