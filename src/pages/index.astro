      margin-top: -34px;
      background: #fff;
    }
    .dieng-hero-img-fun {
      width: 100%;
      height: auto;
      display: block;
      object-fit: cover;
    }
    .dieng-hero-title-fun {
      font-size: 2.28rem;
      font-weight: 900;
      color: #1b4477;
      margin-bottom: 16px;
      margin-top: 2.2rem;
      letter-spacing: -0.5px;
      line-height: 1.13;
    }
    .gradient-text {
      background: linear-gradient(90deg, #0091e6, #24e6a0 60%, #ffe666 100%);
      color: transparent;
      background-clip: text;
      -webkit-background-clip: text;
      font-size: 1.15em;
    }
    .dieng-hero-desc-fun {
      font-size: 1.13rem;
      color: #3c6186;
      max-width: 650px;
      margin: 0 auto;
      line-height: 1.7;
    }
    .dieng-brand-fun {
      font-weight: 900;
      color: #00b5c2;
      letter-spacing: 1px;
    }
    .dieng-brand-fun span {
      color: #ffd600;
    }

    @media (max-width: 600px) {
      .dieng-hero-imgwrap-fun { max-width: 100vw; border-radius: 0.75rem; margin-top: -18px; }
      .dieng-hero-img-fun { width: 100vw; max-width: 100vw; }
      .dieng-hero-title-fun { font-size: 1.35rem; margin-top: 1.1rem; }
    }

    /* CARD PAKET FUN */
    .dieng-paket-wrap-fun { margin-top: 30px; margin-bottom: 38px; }
    .dieng-section-title-fun {
      font-size: 1.42rem;
      font-weight: 700;
      color: #0091e6;
      margin-bottom: 34px;
      margin-top: 0;
      text-align: center;
      letter-spacing: 0;
    }
    .dieng-paket-grid-fun {
      display: flex;
      gap: 26px;
      justify-content: center;
      flex-wrap: wrap;
    }
    .dieng-card-fun {
      background: linear-gradient(140deg, #e5fbfc 65%, #fffde2 100%);
      border-radius: 1.2rem;
      box-shadow: 0 6px 32px #13ecd91a, 0 1.5px 7px #0097c233;
      padding: 33px 28px 29px 28px;
      max-width: 280px;
      width: 100%;
      min-height: 190px;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      transition: transform .13s, box-shadow .2s;
      border: 1.3px solid #d5f1ff;
      position: relative;
      overflow: hidden;
    }
    .dieng-card-fun:hover {
      transform: translateY(-8px) scale(1.025);
      box-shadow: 0 14px 40px 0 #00b5c247, 0 2px 12px #ffd60028;
      border-color: #00b5c2;
    }
    .dieng-card-fun h3 {
      font-size: 1.13rem;
      font-weight: 800;
      margin-bottom: 12px;
      color: #0071c2;
    }
    .dieng-card-fun p {
      font-size: 1rem;
      margin-bottom: 18px;
      color: #1c567c;
    }
    .dieng-btn-fun {
      display: inline-block;
      background: linear-gradient(90deg, #00b5c2, #ffd600 90%);
      color: #fff;
      font-weight: 800;
      padding: 9px 20px;
      border-radius: 99px;
      font-size: 1rem;
      text-decoration: none;
      transition: background .15s, box-shadow .14s;
      box-shadow: 0 2px 8px #ffd60012;
      margin-top: auto;
      letter-spacing: 0.01em;
      border: 0;
    }
    .dieng-btn-fun:hover {
      background: linear-gradient(90deg, #ffd600 30%, #00b5c2 100%);
      color: #0071c2;
      box-shadow: 0 6px 18px #00b5c229;
    }
    .dieng-card-emoji {
      font-size: 2rem;
      position: absolute;
      right: 20px; top: 15px;
