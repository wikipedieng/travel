      pointer-events: none;
    }

    /* KOTA FUN */
    .dieng-kota-grid-fun {
      display: flex;
      flex-wrap: wrap;
      gap: 18px;
      justify-content: center;
      margin-top: 10px;
      margin-bottom: 10px;
    }
    .dieng-kota-card-fun {
      background: linear-gradient(90deg, #00b5c2 60%, #ffd600 100%);
      color: #fff;
      font-weight: 700;
      padding: 13px 30px;
      border-radius: 999px;
      font-size: 1.1rem;
      box-shadow: 0 3px 18px #00b5c226;
      text-decoration: none;
      transition: background .14s, color .16s;
      border: 1.5px solid #eaf2ff;
      display: flex;
      align-items: center;
      gap: 11px;
    }
    .dieng-kota-card-fun:hover {
      background: #133562;
      color: #ffd600;
      border-color: #00b5c2;
      box-shadow: 0 7px 22px #ffd6001a;
    }
    .dieng-kota-emoji {
      font-size: 1.45em;
    }

    /* FAQ FUN */
    .dieng-faq-wrap-fun {
      max-width: 720px;
      margin: 56px auto 0 auto;
      padding: 0 12px 30px 12px;
    }
    .dieng-faq-list-fun {
      display: flex;
      flex-direction: column;
      gap: 18px;
    }
    .dieng-faq-card-fun {
      background: linear-gradient(90deg, #e5fbfc 80%, #fffde2 100%);
      border-radius: 1rem;
      padding: 19px 23px 12px 22px;
      box-shadow: 0 2px 16px #00b5c219;
      border: 1.2px solid #e3ecfa;
      font-size: 1.05rem;
      font-weight: 500;
      color: #1b4477;
      transition: box-shadow .16s, border .13s;
      position: relative;
      overflow: hidden;
    }
    .dieng-faq-card-fun summary {
      cursor: pointer;
      font-weight: 800;
      color: #00b5c2;
      outline: none;
      margin-bottom: 7px;
      font-size: 1.08rem;
      display: flex;
      align-items: center;
      gap: 8px;
      transition: color 0.12s;
    }
    .dieng-faq-emoji {
      font-size: 1.22em;
      margin-right: 4px;
    }
    .dieng-faq-card-fun[open] {
      box-shadow: 0 6px 28px #00b5c239;
      border-color: #00b5c2;
    }
    .dieng-faq-card-fun[open] summary {
      color: #ffd600;
    }
    .dieng-faq-card-fun div {
      padding-top: 4px;
      color: #134075;
    }

    /* DESKRIPSI FUN WRAP */
    .dieng-desc-fun-wrap {
      max-width: 700px;
      margin: 32px auto 10px auto;
      padding: 0 12px;
      background: #faffef;
      border-radius: 1.2rem;
      box-shadow: 0 4px 24px #13ecd91a;
      font-size: 1.06rem;
      color: #19496c;
      text-align: left;
    }
    .dieng-desc-btn {
      margin-top: 15px;
      padding: 10px 28px;
      border: 0;
      border-radius: 999px;
      background: linear-gradient(90deg, #00b5c2, #ffd600 90%);
      color: #fff;
      font-weight: 700;
      font-size: 1rem;
      cursor: pointer;
      box-shadow: 0 2px 8px #ffd60012;
      transition: background .18s;
    }
    .dieng-desc-btn:hover {
      background: linear-gradient(90deg, #ffd600 30%, #00b5c2 100%);
      color: #0071c2;
    }
    @media (max-width: 780px) {
      .dieng-paket-grid-fun, .dieng-kota-grid-fun { flex-direction: column; align-items: center; }
      .dieng-card-fun, .dieng-kota-card-fun { max-width: 94vw; width: 100%; }
      .dieng-hero-img-fun { max-width: 98vw; }
      .dieng-faq-wrap-fun { padding: 0 5vw 22px 5vw; }
    }
  </style>
