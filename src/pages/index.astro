---
import Layout from '../layouts/Layout.astro';

const paketHarian = [
  { title: 'Paket 1 Hari', desc: 'Trip singkat, sunrise Sikunir, kawah, candi, kuliner, pulang hari.', link: '#' },
  { title: 'Paket 2 Hari 1 Malam', desc: 'Explore Dieng lebih lengkap, termasuk sunrise dan menginap di Dieng.', link: '#' },
  { title: 'Paket 3 Hari 2 Malam', desc: 'Puas wisata dari pagi sampai malam, rute fleksibel & banyak destinasi.', link: '#' }
];
const paketKota = [
  { kota: 'Jogja', link: '#' },
  { kota: 'Semarang', link: '#' },
  { kota: 'Purwokerto', link: '#' },
  { kota: 'Solo', link: '#' },
  { kota: 'Wonosobo', link: '#' },
  { kota: 'Kota Lain', link: '#' }
];
const faqs = [
  { q: 'Apa saja keunggulan Paket Wisata Dieng di sini?', a: 'Trip lebih private, itinerary fleksibel, harga transparan, banyak testimoni, dan bisa berangkat dari berbagai kota.' },
  { q: 'Bisa request destinasi atau kuliner tertentu?', a: 'Sangat bisa! Silakan chat admin, tim kami siap bantu custom trip sesuai keinginan.' },
  { q: 'Ada open trip setiap minggu?', a: 'Open trip tersedia rutin setiap weekend (Sabtu-Minggu). Bisa cek jadwal atau langsung booking via WhatsApp.' },
  { q: 'Bisa berangkat dari luar kota?', a: 'Bisa! Kami jemput dari Jogja, Semarang, Solo, Purwokerto, Wonosobo, atau sesuai request peserta.' }
];
---

<Layout title="Paket Wisata Dieng 2025 - Tour Dieng Murah">
<section class="dieng-hero">
  <div class="dieng-hero-imgwrap">
    <img src="https://www.putratourdieng.com/wp-content/uploads/2025/07/paket_wisata_dieng.png" alt="Paket Wisata Dieng" class="dieng-hero-img" />
  </div>
  <h1 class="dieng-hero-title">Paket Wisata Dieng Private – Terlengkap & Fleksibel</h1>
  <p class="dieng-hero-desc">
    Nikmati pengalaman terbaik jelajah Negeri di Atas Awan bareng <b>Dieng.Travel</b>. Pilih trip 1-3 hari, custom rute, berangkat dari Jogja, Semarang, Purwokerto, Solo, atau meeting point sesuai permintaan. Harga ramah, fasilitas lengkap, booking mudah & transparan.
  </p>
</section>




  <section class="dieng-paket-wrap">
    <h2 class="dieng-section-title">Paket Wisata 1–3 Hari</h2>
    <div class="dieng-paket-grid">
      {paketHarian.map((item) => (
        <div class="dieng-card">
          <h3>{item.title}</h3>
          <p>{item.desc}</p>
          <a href={item.link} class="dieng-btn">Lihat Detail</a>
        </div>
      ))}
    </div>
  </section>

  <section class="dieng-paket-wrap">
    <h2 class="dieng-section-title">Paket Wisata Dari Kota Asal</h2>
    <div class="dieng-kota-grid">
      {paketKota.map((item) => (
        <a href={item.link} class="dieng-kota-card">{item.kota}</a>
      ))}
    </div>
  </section>

  <section class="dieng-faq-wrap">
    <h2 class="dieng-section-title">FAQ – Paket Wisata Dieng</h2>
    <div class="dieng-faq-list">
      {faqs.map((item, i) => (
        <details class="dieng-faq-card" { ...(i === 0 && { open: true }) }>
          <summary>{item.q}</summary>
          <div>{item.a}</div>
        </details>
      ))}
    </div>
  </section>

  <style>
  /* Hero */
.dieng-hero {
  padding: 0 0 30px 0;
  text-align: center;
  background: #fff;
}
.dieng-hero-imgwrap {
  max-width: 1000px;
  width: 95vw;
  margin: 0 auto;
  border-radius: 1.3rem;
  overflow: hidden;
  box-shadow: 0 4px 24px #19335a14;
  margin-top: -32px; /* jurus: tarik gambar ke atas, rapat header */
}
.dieng-hero-img {
  width: 100%;
  display: block;
}
.dieng-hero-title {
  font-size: 2.3rem;
  font-weight: 800;
  color: #133562;
  margin-bottom: 15px;
  margin-top: 1.7rem;
  letter-spacing: -0.5px;
}
.dieng-hero-desc {
  font-size: 1.16rem;
  color: #4a4a4a;
  max-width: 650px;
  margin: 0 auto;
  line-height: 1.7;
}
@media (max-width: 600px) {
  .dieng-hero-imgwrap {
    max-width: 99vw;
    border-radius: 0.9rem;
    margin-top: -18px;
  }
  .dieng-hero-title { font-size: 1.38rem; margin-top: 1.1rem;}
}


  .dieng-section-title {
    font-size: 1.45rem;
    font-weight: 700;
    color: #133562;
    margin-bottom: 24px;
    text-align: center;
    letter-spacing: 0;
  }
  /* Card Paket */
  .dieng-paket-wrap {
    margin-top: 30px;
    margin-bottom: 38px;
  }
  .dieng-paket-grid {
    display: flex;
    gap: 26px;
    justify-content: center;
    flex-wrap: wrap;
  }
  .dieng-card {
    background: #fff;
    border-radius: 1.2rem;
    box-shadow: 0 4px 26px 0 #0071c221, 0 1px 4px #0001;
    padding: 34px 30px 30px 30px;
    max-width: 300px;
    width: 100%;
    min-height: 195px;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    transition: transform .13s, box-shadow .2s;
    border: 1.6px solid #f2f5ff;
  }
  .dieng-card:hover {
    transform: translateY(-8px) scale(1.025);
    box-shadow: 0 12px 36px 0 #0071c246, 0 2px 10px #0002;
    border-color: #0071c2;
  }
  .dieng-card h3 {
    font-size: 1.18rem;
    font-weight: 800;
    margin-bottom: 12px;
    color: #0061b0;
  }
  .dieng-card p {
    font-size: 1rem;
    margin-bottom: 16px;
    color: #19335a;
  }
  .dieng-btn {
    display: inline-block;
    background: linear-gradient(90deg, #0071c2, #00b5c2 80%);
    color: #fff;
    font-weight: 700;
    padding: 10px 22px;
    border-radius: 24px;
    font-size: 1rem;
    text-decoration: none;
    transition: background .17s, box-shadow .17s;
    box-shadow: 0 2px 8px #0071c218;
    margin-top: auto;
  }
  .dieng-btn:hover {
    background: linear-gradient(90deg, #0058a8, #06b 80%);
    box-shadow: 0 6px 18px #0071c230;
    color: #ffe082;
  }
  /* Card Kota */
  .dieng-kota-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 18px;
    justify-content: center;
    margin-top: 12px;
    margin-bottom: 8px;
  }
  .dieng-kota-card {
    background: #0071c2;
    color: #fff;
    font-weight: 700;
    padding: 13px 32px;
    border-radius: 999px;
    font-size: 1.09rem;
    box-shadow: 0 3px 16px #0071c220;
    text-decoration: none;
    transition: background .14s, color .16s;
    border: 1.5px solid #eaf2ff;
  }
  .dieng-kota-card:hover {
    background: #133562;
    color: #ffe082;
    border-color: #0071c2;
  }
  /* FAQ */
  .dieng-faq-wrap {
    max-width: 700px;
    margin: 55px auto 0 auto;
    padding: 0 12px 30px 12px;
  }
  .dieng-faq-list {
    display: flex;
    flex-direction: column;
    gap: 18px;
  }
  .dieng-faq-card {
    background: #f8fbff;
    border-radius: 1rem;
    padding: 18px 22px 11px 22px;
    box-shadow: 0 2px 16px #0071c20d;
    border: 1.2px solid #e3ecfa;
    font-size: 1.05rem;
    font-weight: 500;
    color: #134075;
    transition: box-shadow .16s, border .13s;
  }
  .dieng-faq-card summary {
    cursor: pointer;
    font-weight: 800;
    color: #0071c2;
    outline: none;
    margin-bottom: 7px;
    font-size: 1.07rem;
  }
  .dieng-faq-card[open] {
    box-shadow: 0 6px 28px #0071c233;
    border-color: #0071c2;
  }
  .dieng-faq-card[open] summary {
    color: #0058a8;
  }
  .dieng-faq-card div {
    padding-top: 4px;
    color: #18325a;
  }
  @media (max-width: 780px) {
    .dieng-paket-grid, .dieng-kota-grid { flex-direction: column; align-items: center; }
    .dieng-card, .dieng-kota-card { max-width: 90vw; width: 100%; }
    .dieng-hero-img { max-width: 96vw; }
  }
  </style>
</Layout>
