  margin: 32px auto;
  padding: 0 16px;
}
.dieng-rekom-card-fun {
  background: linear-gradient(120deg, #e8fcff 70%, #fffde2 100%);
  border: 1.4px solid #cceffc;
  border-radius: 1.2rem;
  padding: 24px 26px;
  box-shadow: 0 3px 24px #00b5c214;
  color: #1b4477;
  font-size: 1.06rem;
  line-height: 1.7;
}
.dieng-rekom-card-fun p {
  margin-bottom: 14px;
}
.dieng-rekom-link {
  color: #0091e6;
