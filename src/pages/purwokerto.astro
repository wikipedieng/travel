const faq = [
  {
    q: "Bisa jemput peserta di luar kota Purwokerto?",
    a: "Bisa! Penjemputan fleksibel: Sokaraja, Ajibarang, Stasiun, kampus, bahkan rumah. Cukup info lokasi waktu booking.",
