---
const navItems = [
  { linkText: 'Home', href: '/' },
  { linkText: 'Revalidation', href: '/revalidation' },
  { linkText: 'Image CDN', href: '/image-cdn' },
  { linkText: 'Edge Function', href: '/edge' },
  { linkText: 'Blobs', href: '/blobs' }
];
---
<nav class="header-global">
  <div class="header-inner">
    <a href="/" class="header-logo">
      Dieng.<span>Travel</span>
    </a>
    <div class="header-nav">
      {navItems.map((item) => (
        <a href={item.href} class="header-link">{item.linkText}</a>
      ))}
    </div>
  </div>
</nav>
<div style="margin-bottom: 3.5rem;"></div>

<style>
/* Header Full Blue Booking Style */
.header-global {
  width: 100%;
  background: #0071c2;
  box-shadow: 0 2px 16px 0 #0001;
  padding: 0;
  margin: 0;
}
.header-inner {
  width: 100%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28px 32px 28px 32px;
}
.header-logo {
  color: #fff;
  font-weight: 900;
  font-size: 2rem;
  letter-spacing: 1px;
  text-decoration: none;
  font-family: 'Inter', Arial, sans-serif;
  transition: opacity .18s;
  user-select: none;
}
.header-logo span {
  color: #ffe082; /* kuning muda kayak Booking.com */
  font-weight: 900;
}
.header-nav {
  display: flex;
  gap: 2.2rem;
}
.header-link {
  color: #fff;
  font-weight: 600;
  font-size: 1.09rem;
  text-decoration: none;
  border-radius: 8px;
  padding: 9px 18px;
  transition: background 0.18s, color 0.18s, box-shadow 0.2s;
  opacity: 0.95;
  position: relative;
}
.header-link:hover,
.header-link:focus {
  background: rgba(255,255,255,0.09);
  color: #ffe082;
  opacity: 1;
  text-shadow: 0 2px 6px #0001;
}
@media (max-width: 820px) {
  .header-inner { flex-direction: column; align-items: flex-start; gap: 16px; padding: 22px 14px; }
  .header-nav { gap: 0.7rem; flex-wrap: wrap; }
}
@media (max-width: 420px) {
  .header-inner { padding: 16px 6px; }
  .header-logo { font-size: 1.2rem; }
  .header-link { font-size: 0.98rem; padding: 8px 10px; }
}
</style>
