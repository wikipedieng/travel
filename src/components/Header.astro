---
const navItems = [
    { linkText: 'Home', href: '/' },
    { linkText: 'Revalidation', href: '/revalidation' },
    { linkText: 'Image CDN', href: '/image-cdn' },
    { linkText: 'Edge Function', href: '/edge' },
    { linkText: 'Blobs', href: '/blobs' }
];
---

<nav class="w-full bg-blue-700 z-30 shadow-sm">
    <div class="max-w-6xl mx-auto flex flex-wrap items-center justify-between gap-4 px-5 py-7 sm:px-10 sm:py-9">
        <a href="/" class="text-2xl font-extrabold tracking-tight text-white select-none" style="letter-spacing:0.5px;">
            Dieng.<span class="text-blue-200">Travel</span>
        </a>
        {
            !!navItems?.length && (
                <ul class="flex flex-wrap gap-x-2 gap-y-1">
                    {navItems.map((item) => (
                        <li>
                            <a 
                                href={item.href}
                                class="inline-block px-3 py-2 rounded-xl text-base font-semibold text-white hover:bg-blue-600 hover:text-white transition-colors duration-200"
                                style="text-decoration:none;"
                            >
                                {item.linkText}
                            </a>
                        </li>
                    ))}
                </ul>
            )
        }
    </div>
</nav>
<div class="mb-12 sm:mb-16"></div>
