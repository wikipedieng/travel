---
const navItems = [
    { linkText: 'Home', href: '/' },
    { linkText: 'Revalidation', href: '/revalidation' },
    { linkText: 'Image CDN', href: '/image-cdn' },
    { linkText: 'Edge Function', href: '/edge' },
    { linkText: 'Blobs', href: '/blobs' }
];
---

<nav class="flex flex-wrap items-center justify-between gap-4 px-4 py-6 sm:px-12 sm:py-8 border-b bg-white/95 shadow-sm">
    <a href="/" class="text-2xl font-extrabold tracking-tight text-blue-800 select-none" style="letter-spacing:0.5px;">
        Dieng.<span class="text-blue-500">Travel</span>
    </a>
    {
        !!navItems?.length && (
            <ul class="flex flex-wrap gap-x-4 gap-y-1">
                {navItems.map((item) => (
                    <li>
                        <a href={item.href} class="inline-block px-2 py-1 rounded-md text-base font-medium text-slate-700 hover:bg-blue-50 hover:text-blue-600 transition">
                            {item.linkText}
                        </a>
                    </li>
                ))}
            </ul>
        )
    }
</nav>
