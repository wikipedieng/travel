---
const navItems = [
    { linkText: 'Home', href: '/' },
    { linkText: 'Revalidation', href: '/revalidation' },
    { linkText: 'Image CDN', href: '/image-cdn' },
    { linkText: 'Edge Function', href: '/edge' },
    { linkText: 'Blobs', href: '/blobs' }
];
---
<nav class="w-full bg-[#0071c2] shadow-sm z-30">
  <div class="max-w-7xl mx-auto flex items-center justify-between px-6 py-6">
    <a href="/" class="text-2xl font-extrabold tracking-tight text-white select-none">
      Dieng.Travel
    </a>
    <ul class="flex gap-2 sm:gap-4 md:gap-7">
      {navItems.map((item) => (
        <li>
          <a
            href={item.href}
            class="inline-block px-4 py-2 text-base font-semibold text-white rounded-md hover:bg-white/15 hover:text-white transition duration-150"
            style="text-decoration:none;"
          >
            {item.linkText}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>
<div class="mb-12 sm:mb-16"></div>
