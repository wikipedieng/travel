---
const navItems = [
  { linkText: 'Home', href: '/' },
  { linkText: 'Paket', href: '/paket' },
  { linkText: 'Open Trip', href: '/opentrip' },
  { linkText: 'Testimoni', href: '/testimoni' },
  { linkText: 'Kontak', href: '/kontak' }
];
---
<nav class="dieng-header">
  <div class="dieng-header-inner">
    <a href="/" class="dieng-logo">
      Dieng.<span>Travel</span>
    </a>
    <ul class="dieng-nav">
      {navItems.map((item) => (
        <li>
          <a href={item.href} class="dieng-link">{item.linkText}</a>
        </li>
      ))}
    </ul>
  </div>
</nav>
<div style="margin-bottom: 3.7rem;"></div>

<style>
.dieng-header {
  width: 100%;
  background: linear-gradient(90deg, #0071c2 75%, #0097c2 100%);
  box-shadow: 0 2px 16px 0 #0001;
  padding: 0; margin: 0;
  position: relative; z-index: 30;
}
.dieng-header-inner {
  max-width: 1260px;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28px 32px 28px 32px;
}
.dieng-logo {
  color: #fff;
  font-family: 'Inter', Arial, sans-serif;
  font-weight: 900;
  font-size: 2rem;
  letter-spacing: 1px;
  text-decoration: none;
  user-select: none;
  transition: letter-spacing 0.16s;
}
.dieng-logo span {
  color: #ffd600; /* gold ala Booking/Traveloka */
  font-weight: 900;
}
.dieng-nav {
  display: flex;
  gap: 2.4rem;
  list-style: none;
  margin: 0; padding: 0;
}
.dieng-link {
  color: #fff;
  font-weight: 600;
  font-size: 1.09rem;
  text-decoration: none;
  border-radius: 8px;
  padding: 9px 14px 9px 14px;
  display: inline-block;
  position: relative;
  opacity: 0.96;
  transition: color 0.16s, background 0.15s;
  /* animasi underline */
}
.dieng-link::after {
  content: '';
  display: block;
  height: 3px;
  width: 0;
  background: linear-gradient(90deg, #ffd600, #fff2);
  border-radius: 2px;
  margin: 0 auto;
  transition: width 0.25s cubic-bezier(.4,0,.2,1);
}
.dieng-link:hover,
.dieng-link:focus {
  color: #ffd600;
  background: rgba(255,255,255,0.07);
}
.dieng-link:hover::after,
.dieng-link:focus::after {
  width: 70%;
}
@media (max-width: 900px) {
  .dieng-header-inner { flex-direction: column; align-items: flex-start; gap: 13px; padding: 18px 10px; }
  .dieng-nav { gap: 0.9rem; }
}
@media (max-width: 480px) {
  .dieng-header-inner { padding: 13px 4px; }
  .dieng-logo { font-size: 1.2rem; }
  .dieng-link { font-size: 0.97rem; padding: 8px 7px; }
}
</style>
